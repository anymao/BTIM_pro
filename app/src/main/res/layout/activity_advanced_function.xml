<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_advanced_function"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="top.anymore.btim_pro.activity.AdvancedFunctionActivity">
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sc_open_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="允许被连接"
        app:switchPadding="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp" />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sc_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开放检测"
        app:switchPadding="114dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
